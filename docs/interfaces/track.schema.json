{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.local/sentinel-sda/track.schema.json",
    "title": "Track",
    "type": "object",
    "required": ["track_id", "object_id", "state", "confidence", "updated_at"],
    "properties": {
        "track_id": { "type": "string" },
        "object_id": { "type": "string" },
        "state": {
            "type": "object",
            "required": ["x_km", "y_km", "z_km", "vx_kms", "vy_kms", "vz_kms"],
            "properties": {
                "x_km": { "type": "number" },
                "y_km": { "type": "number" },
                "z_km": { "type": "number" },
                "vx_kms": { "type": "number" },
                "vy_kms": { "type": "number" },
                "vz_kms": { "type": "number" }
            },
            "additionalProperties": false
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "updated_at": { "type": "string", "format": "date-time" }
    },
    "additionalProperties": true
}